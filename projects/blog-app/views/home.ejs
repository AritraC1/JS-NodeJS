<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <title>Blogify | Home</title>
</head>

<body class="bg-light d-flex flex-column min-vh-100">

    <%- include("./partials/navbar") %>

        <!-- ================= HERO SECTION ================= -->
        <section class="py-5 text-center bg-white shadow-sm">
            <div class="container">
                <h1 class="fw-bold">Welcome to Blogify</h1>
                <p class="text-muted">Read amazing blogs from our community ✍️</p>
            </div>
        </section>

        <!-- ================= BLOG LIST ================= -->
        <div class="container my-5">
            <div class="row g-4">

                <% if (blogs && blogs.length> 0) { %>
                    <% blogs.forEach(blog=> { %>
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm border-0">

                                <% if (blog.coverImageUrl) { %>
                                    <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="Blog Cover Image"
                                        style="height: 200px; object-fit: cover;">
                                    <% } %>

                                        <div class="card-body d-flex flex-column">
                                            <h5 class="card-title fw-bold">
                                                <%= blog.title %>
                                            </h5>

                                            <!-- Show shortened body -->
                                            <p class="card-text text-muted flex-grow-1">
                                                <%= blog.body.length> 120
                                                    ? blog.body.substring(0, 120) + "..."
                                                    : blog.body
                                                    %>
                                            </p>

                                            <div class="small text-secondary mb-3">
                                                By <strong>
                                                    <%= blog.createdBy?.fullName || "Unknown" %>
                                                </strong>
                                                • <%= new Date(blog.createdAt).toDateString() %>
                                            </div>

                                            <a href="/<%= blog._id %>" class="btn btn-outline-dark btn-sm mt-auto">
                                                Read More
                                            </a>
                                        </div>

                            </div>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <div class="text-center py-5">
                                    <h4 class="text-muted">No blogs available yet.</h4>
                                </div>
                                <% } %>

            </div>
        </div>

        <%- include("./partials/footer") %>
            <%- include("./partials/scripts") %>

</body>

</html>