<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
    <title>Signin</title>
</head>

<body class="bg-light d-flex flex-column min-vh-100">

    <!-- ================= NAVBAR ================= -->
    <nav class="navbar navbar-light shadow-sm bg-dark" data-bs-theme="dark">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">Blogify</a>
        </div>
    </nav>

    <!-- ================= FULL PAGE SIGNUP SECTION ================= -->
    <section class="flex-grow-1 d-flex align-items-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">

                    <div class="card shadow border-0">
                        <div class="card-body p-4 p-md-5">

                            <h3 class="text-center mb-4 fw-bold">Create Account</h3>

                            <!-- Optional error message -->
                            <% if (typeof error !=='undefined' ) { %>
                                <div class="alert alert-danger">
                                    <%= error %>
                                </div>
                                <% } %>

                                    <form action="/signin" method="POST">

                                        <!-- Email -->
                                        <div class="mb-3">
                                            <label class="form-label">Email address</label>
                                            <input type="email" name="email" class="form-control"
                                                placeholder="Enter your email" required>
                                        </div>

                                        <!-- Password -->
                                        <div class="mb-3">
                                            <label class="form-label">Password</label>
                                            <input type="password" name="password" class="form-control"
                                                placeholder="Enter password" required>
                                        </div>

                                        <!-- Submit Button -->
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-dark">
                                                Sign In
                                            </button>
                                        </div>

                                    </form>

                                    <!-- Login Redirect -->
                                    <p class="text-center mt-4 mb-0">
                                        Don't have an account?
                                        <a href="/signup" class="text-decoration-none fw-semibold">Signup</a>
                                    </p>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <%- include("./partials/footer") %>
        <%- include("./partials/scripts") %>

</body>

</html>