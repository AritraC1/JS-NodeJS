<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
    <title>Blogify | My Blogs</title>
</head>

<body class="bg-light d-flex flex-column min-vh-100">

    <%- include("./partials/navbar") %>

    <!-- ================= HERO SECTION ================= -->
    <section class="py-5 text-center bg-white shadow-sm">
        <div class="container">
            <h1 class="fw-bold">My Blogs</h1>
            <p class="text-muted">Manage and view all your published blogs ✍️</p>
        </div>
    </section>

    <!-- ================= BLOG LIST ================= -->
    <div class="container my-5">
        <div class="row g-4">

            <% if (blogs && blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0">

                            <% if (blog.coverImageUrl) { %>
                                <img src="<%= blog.coverImageUrl %>" 
                                     class="card-img-top" 
                                     alt="Blog Cover Image"
                                     style="height: 200px; object-fit: cover;">
                            <% } %>

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">
                                    <%= blog.title %>
                                </h5>

                                <!-- Shortened body preview -->
                                <p class="card-text text-muted flex-grow-1">
                                    <%= blog.body.length > 120
                                        ? blog.body.substring(0, 120) + "..."
                                        : blog.body
                                    %>
                                </p>

                                <div class="small text-secondary mb-3">
                                    Created on 
                                    <strong>
                                        <%= new Date(blog.createdAt).toDateString() %>
                                    </strong>
                                </div>

                                <div class="d-flex gap-2 mt-auto">
                                    <a href="/<%= blog._id %>" 
                                       class="btn btn-outline-dark btn-sm">
                                        Read
                                    </a>

                                    <a href="/blog/edit/<%= blog._id %>" 
                                       class="btn btn-outline-primary btn-sm">
                                        Edit
                                    </a>

                                    <a href="/blog/delete/<%= blog._id %>" 
                                       class="btn btn-outline-danger btn-sm">
                                        Delete
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                <% }) %>

            <% } else { %>

                <div class="text-center py-5">
                    <h4 class="text-muted">You haven't created any blogs yet.</h4>
                    <a href="/blog/add-new" class="btn btn-dark mt-3">
                        Create Your First Blog
                    </a>
                </div>

            <% } %>

        </div>
    </div>

    <%- include("./partials/footer") %>
    <%- include("./partials/scripts") %>

</body>

</html>